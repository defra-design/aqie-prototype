{%- set headingLevel = params.headingLevel or 2 -%}
<section class="app-attachment govuk-!-display-none-print">
  <div class="app-attachment__thumbnail">
    <a class="govuk-link" target="_self" tabindex="-1" aria-hidden="true" href="{{ params.href }}">
      <svg class="app-attachment__thumbnail-image" version="1.1" viewBox="0 0 99 140" width="99" height="140" aria-hidden="true">
        <path d="M12 12h75v27H12zM12 59h9v9h-9zM12 77h9v9h-9zM12 95h9v9h-9zM12 113h9v9h-9zM30 59h57v9H30zM30 77h39v9H30zM30 95h57v9H30zM30 113h48v9H30z" stroke-width="0"></path>
      </svg>
    </a>
  </div>
  <div class="app-attachment__details">
    <h{{ headingLevel}} class="app-attachment__title">
      <a class="govuk-link app-attachment__link" target="_self" href="{{ params.href }}">{{ params.title }}</a>
    </h{{ headingLevel}}>
    <p class="app-attachment__metadata"><span class="app-attachment__attribute"><abbr title="Portable Document Format" class="app-attachment__abbr">PDF</abbr></span>, <span class="app-attachment__attribute">{{ params.size }}</span>, <span class="app-attachment__attribute">{{ params.pages }} pages</span></p>
  </div>
</section>
